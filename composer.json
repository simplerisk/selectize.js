{
    "name": "simplerisk/selectize.js",
    "description": "Selectize is the hybrid of a textbox and <select> box. It's jQuery based, and it has autocomplete and native-feeling keyboard navigation; useful for tagging, contact lists, etc. Fork from selectize/selectize.js for use with Composer.",
    "keywords": ["selectize"],
    "homepage": "https://github.com/simplerisk/selectize.js",
    "type": "library",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Selectize.js",
            "homepage": "https://selectize.dev/"
        },
        {
            "name": "SimpleRisk",
            "email": "support@simplerisk.com",
            "homepage": "https://simplerisk.com/"
        }
    ],
	"require": {
		"php": ">=7.2"
	},
	"autoload": {
		"files": ["selectize.min.js"]
	},
	"extra": {
		"component": {
			"scripts": ["selectize.min.js"]
		}
	},
	"archive": {
		"exclude": [
			"docs",
                        "examples",
                        "src",
                        "test",
                        "vendor"
		]
	}
}
